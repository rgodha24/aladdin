generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Location {
  id        Int    @id @default(autoincrement())
  name      String
  inventory Item[]
}

model Item {
  id       Int    @id @default(autoincrement())
  name     String
  quantity Int

  Location   Location? @relation(fields: [locationId], references: [id])
  locationId Int?

  @@index([locationId])
}
